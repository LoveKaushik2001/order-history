<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customer Orders</title>
    <style>
      body {
        font-family: Arial, sans-serif;
      }
      h1 {
        text-align: center;
        margin-top: 20px;
      }
      .order-table {
        width: 80%;
        margin: 0 auto;
        border-collapse: collapse;
        margin-top: 20px;
      }
      .order-table th,
      .order-table td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
      }
      .order-table th {
        background-color: #f2f2f2;
      }
      .date-row {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <h1>
      Current Cycle Order History for <%= output.name %> with customer ID: (<%=
      output.customerId %>)
    </h1>
    <% if (parseInt(output.discount)) { %> You have attained a discount of <%=
    output.discount %>% on your total billed amount. <% } %>
    <div class="date-row">
      <table class="order-table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Order</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% for (const [date, skus] of Object.entries(output.dates)) { %> <%
          let allZero = Object.values(skus).every(qty => qty.trim() === ""); %>
          <% if (!allZero) { %>
          <tr>
            <td><%= date %></td>
            <% let skuOutput = Object.entries(skus).filter(([skuCode, qty]) =>
            (qty.trim() !== "" && skuCode !== "MSC")).map(([skuCode, qty]) =>
            qty + " " + (output?.skusDetail?.[skuCode]?.[0] ||
            skuCode)).join(","); %>
            <td><%= skuOutput %></td>
            <% let amountTotal = 0; %> <%
            Object.entries(skus).filter(([skuCode,qty]) => (qty.trim() !==
            "")).forEach(([skuCode, qty]) => { %> <%amountTotal +=
            (parseInt(qty) * ((parseInt(output?.isSub) ?
            output?.skusDetail?.[skuCode]?.[2] :
            output?.skusDetail?.[skuCode]?.[1])|| 1000)); %> <% }) %>
            <td><%= amountTotal %></td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
